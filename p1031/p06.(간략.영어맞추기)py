english={
    "사랑":"love",
    "차":"car",
    "커피":"coffee"
}
correc_dic={}
count=0

# 영어맞추기 프로그램을 구현하시오
print("[ 영어맞추기 프로그램 ]")
print("영어를 재밌게 학습해보아요~")
print()

for k,v in english.items():
    print("{} 은(는) 영어로 뭘까요?".format(k))
    answer= input(">>")
    
    # answer == v
    if answer==v:
        print("띵동~~ 정답입니다~~!")
        correc_dic[k]="정답"
        count+=1
        print("-"*50)
        
    else:
        print("오답! 정답은 {}".format(v))
        correc_dic[k]="오답"
        print("-"*50)
    

# correc_dic= {사랑:정답    차:정답     커피:오답}
# 키를 먼저 출력하고, 정답과 입력값을 비교하여 correc_dic에 넣은 후 출력한다

for k,correc in correc_dic.items():  # correc_dic [사랑:정답  차:오답]
    print("{}:{}".format(k,correc),end="  ")
print("[ 맞 은 개 수 ]:{}".format(count))


